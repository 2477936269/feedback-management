# 数据库配置
DATABASE_URL="postgresql://username:password@localhost:5432/msfeedback"

# JWT配置
JWT_SECRET="your-super-secret-jwt-key-here"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-here"
JWT_EXPIRES_IN="24h"
JWT_REFRESH_EXPIRES_IN="7d"

# 服务器配置
PORT=50008
NODE_ENV=development

# CORS配置
CORS_ORIGIN="http://localhost:30008,http://localhost:50008"

# 文件上传配置
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES="image/*,audio/*,video/*"
UPLOAD_DIR="uploads"

# 语音识别API配置
SPEECH_API_KEY="your-speech-api-key"
SPEECH_API_SECRET="your-speech-api-secret"
SPEECH_ENDPOINT="https://api.example.com/speech"

# Redis配置
REDIS_URL="redis://localhost:6379"

# 邮件配置
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER="your-email@gmail.com"
EMAIL_PASS="your-email-password" 